{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@domain/*": ["src/domain/*"],
      "@tests/*": ["tests/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
